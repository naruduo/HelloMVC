<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Homework" table="homework" schema="se_web">
        <id name="hwId">
            <column name="hw_id" sql-type="int(10)"/>
        </id>
        <property name="teacherName">
            <column name="teacher_name" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(255)"/>
        </property>
        <property name="releaseTime">
            <column name="release_time" sql-type="datetime"/>
        </property>
        <property name="deadline">
            <column name="deadline" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>