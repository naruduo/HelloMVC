<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Exp" table="exp" schema="se_web">
        <id name="expId">
            <column name="exp_id" sql-type="int(10)"/>
        </id>
        <property name="expAddress">
            <column name="exp_address" sql-type="varchar(255)"/>
        </property>
        <property name="teacherId">
            <column name="teacher_id" sql-type="int(10)"/>
        </property>
        <property name="releaseTime">
            <column name="release_time" sql-type="datetime"/>
        </property>
        <property name="deadline">
            <column name="deadline" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>