<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.CourseChapters" table="course_chapters" schema="se_web">
        <id name="unitId">
            <column name="unit_id" sql-type="int(10)"/>
        </id>
        <property name="unitName">
            <column name="unit_name" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="unitDesc">
            <column name="unit_desc" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>